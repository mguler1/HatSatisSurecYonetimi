@model AppUserSignInViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}

<form asp-action="GirisYap" method="post" class="mt-5  w-50 mx-auto p-4 shadow">
    <div class="form-group">
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>
    <a asp-action="KayitOl" class="btn btn-warning btn-sm">KayitOl</a>
    <input type="submit" class="btn btn-info btn-sm" value="Giriş Yap" />

</form>
